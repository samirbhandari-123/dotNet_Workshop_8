@page "/calculator"

<h3>Calculator</h3>

<input type="number" @bind="Num1" class="form-control mb-2" placeholder="Enter first number" />
<input type="number" @bind="Num2" class="form-control mb-2" placeholder="Enter second number" />

<div class="mt-2">
    <button class="btn btn-primary m-1" @onclick="Add">+</button>
    <button class="btn btn-primary m-1" @onclick="Subtract">-</button>
    <button class="btn btn-primary m-1" @onclick="Multiply">*</button>
    <button class="btn btn-primary m-1" @onclick="Divide">/</button>
</div>

<h4 class="mt-3">Result: @Result</h4>

@code {
    private double Num1 { get; set; }
    private double Num2 { get; set; }
    private double Result { get; set; }

    private void Add()
    {
        Result = Num1 + Num2;
    }

    private void Subtract()
    {
        Result = Num1 - Num2;
    }

    private void Multiply()
    {
        Result = Num1 * Num2;
    }

    private void Divide()
    {
        if (Num2 != 0)
        {
            Result = Num1 / Num2;
        }
        else
        {
            // Optional: handle divide by zero
            Result = 0;
        }
    }
}
